{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "importsNotUsedAsValues": "error",
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "src/*": ["static/js/*"]
    },
    "noEmit": true
  },
  "include": ["static"],
  "exclude": ["node_modules", "static/dist"]
}
